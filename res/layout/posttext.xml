<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#D3E8A3"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2.5dp"
        android:layout_marginRight="2.5dp"
        android:background="@drawable/custom_shape"
        android:paddingLeft="2dp"
        android:paddingRight="2dp" >

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/ivProfile"
            android:paddingTop="2.5dp"
            android:text="@string/name"
            android:textColor="#1CCE28"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/imagen_perfil"
            android:paddingLeft="2.5dp"
            android:paddingRight="2.5dp"
            android:paddingTop="2.5dp" />

        <TextView
            android:id="@+id/tvGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvName"
            android:layout_toLeftOf="@+id/tvSeparador"
            android:text="@string/group"
            android:textColor="#BDBDBD"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvSeparador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvName"
            android:layout_toLeftOf="@+id/tvFecha"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/separador"
            android:textColor="#BDBDBD"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvName"
            android:layout_alignParentRight="true"
            android:text="@string/date"
            android:textColor="#BDBDBD"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivProfile"
            android:paddingBottom="2.5dp"
            android:paddingLeft="10dp"
            android:paddingTop="2.5dp"
            android:text="@string/text"
            android:textColor="#000000"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tvIdPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvName"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvURLPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_toRightOf="@+id/ivProfile"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvURLSinglePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_toRightOf="@+id/ivProfile"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2.5dp"
        android:layout_marginRight="2.5dp"
        android:background="#BBD768" >

        <TextView
            android:id="@+id/tvComentarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tvReply_Count"
            android:padding="2dp"
            android:text="@string/comentarios"
            android:textColor="#5BBF21"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvReply_Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvComentarios"
            android:layout_alignParentRight="true"
            android:padding="2dp"
            android:textColor="#FFFFFF"
            android:textSize="9dp" />
    </RelativeLayout>

</LinearLayout>